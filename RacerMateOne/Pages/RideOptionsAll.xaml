                    <DoubleAnimation 
                            Storyboard.TargetName="riderOptionsAll"
                            Storyboard.TargetProperty="(Page.Opacity)"
                            To="1.0" Duration="0:0:0.3"
                            AutoReverse="False" RepeatBehavior="1x"
                         />
                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard>
                <Storyboard Name="FadeOut" Completed="FadeOut_Completed">
                    <DoubleAnimation 
                            Storyboard.TargetName="riderOptionsAll"
                            Storyboard.TargetProperty="(Page.Opacity)"
                            To="0.0" Duration="0:0:0.3"
                            AutoReverse="False" RepeatBehavior="1x"
                         />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    
