<UserControl x:Class="RacerMateOne.Controls.Fade"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Name="mainBox" Loaded="mainBox_Loaded">
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="UserControl.Unloaded">
			<BeginStoryboard>
				<Storyboard Name="a_Fade" Completed="a_Fade_Completed">
					<DoubleAnimation Name="a_FadeAnim"
                            Storyboard.TargetName="mainBox"
                            Storyboard.TargetProperty="(UserControl.Opacity)"
                            To="1.0" Duration="0:0:0.1"
                            AutoReverse="False" RepeatBehavior="1x" />
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</UserControl.Triggers>
</UserControl>
