							<DrawingBrush.Drawing>
								<DrawingGroup>
									<GeometryDrawing Brush="#FF437898">
										<GeometryDrawing.Geometry>
											<GeometryGroup>
												<RectangleGeometry Rect="0,0,1,1.1" />
											</GeometryGroup>
										</GeometryDrawing.Geometry>
									</GeometryDrawing>

									<GeometryDrawing Brush="#FF3A7193">
										<GeometryDrawing.Geometry>
											<GeometryGroup>
