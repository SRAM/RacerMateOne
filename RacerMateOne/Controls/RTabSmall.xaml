<UserControl x:Class="RacerMateOne.Controls.RTabSmall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontFamily="Arial"
	Name="btn" MouseDown="btn_MouseDown" MouseLeave="btn_MouseLeave" MouseEnter="btn_MouseEnter" MouseUp="btn_MouseUp" Loaded="btn_Loaded">
	<UserControl.Resources>
		<SolidColorBrush x:Key="OtherColor">#FF8FB7D3</SolidColorBrush>
	</UserControl.Resources>
	<Grid>
		<Border Name="Border" BorderThickness="1" BorderBrush="White" Background="White" CornerRadius="10,10,0,0">
			<Label Name="Label" Padding="10,3,10,0" FontSize="12" Foreground="{DynamicResource OtherColor}" Content="{Binding ElementName=btn,Path=Text}"/>
		</Border>
	</Grid>
</UserControl>
