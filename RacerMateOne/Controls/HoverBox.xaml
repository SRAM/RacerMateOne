<UserControl x:Class="RacerMateOne.Controls.HoverBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="hoverBox" BorderBrush="White" Loaded="hoverBox_Loaded" SizeChanged="hoverBox_SizeChanged">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Grid>
                <Grid.Effect>
                    <DropShadowEffect x:Name="Shadow" Color="Black" Direction="315" ShadowDepth="8" Opacity=".45" />
                </Grid.Effect>
                <!-- Data="M 120,298 L 100,350 L 180,298" -->
                <Path Fill="{Binding BorderBrush,ElementName=hoverBox}" Loaded="Path_Loaded" />
                <Border Background="{Binding Background,ElementName=hoverBox}" BorderThickness="{Binding BorderThickness,ElementName=hoverBox}" BorderBrush="{Binding BorderBrush,ElementName=hoverBox}" CornerRadius="{Binding CornerRadius,ElementName=hoverBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Loaded="Border_Loaded" SizeChanged="hoverBox_SizeChanged">
                    <Grid>
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </Grid>
                </Border>    
            </Grid>
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>
