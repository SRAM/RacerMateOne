<UserControl x:Class="RacerMateOne.Controls.CoursePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="233"
	Width="520" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
	<UserControl.Resources>
		<Style x:Key="PType" TargetType="{x:Type Path}">
			<Setter Property="Margin" Value="3,0,5,0"/>
			<Setter Property="Data" Value="M 0,0 L 50,0"/>
			<Setter Property="Stroke" Value="#FF8FB7D3"/>
			<Setter Property="StrokeThickness" Value="0.5"/>
			<Setter Property="StrokeDashArray" Value="2,2"/>
			<Setter Property="Stretch" Value="Uniform"/>
			<Setter Property="VerticalAlignment" Value="Bottom"/>
		</Style>
	</UserControl.Resources>
	<!--<Border CornerRadius="14" BorderThickness="1" BorderBrush="#FF326D91" Background="White">-->
    <Border BorderThickness="1"
            BorderBrush="#FF326D91"
            Background="White">
        <Grid>
			<ScrollViewer Name="d_CourseScroller" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" Margin="3,2,3,2">
				<StackPanel Name="d_CoursePicker" HorizontalAlignment="Left" >

				</StackPanel>
			</ScrollViewer>
			<Label Name="t_Loading" Foreground="#266388" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">Loading courses...</Label>
		</Grid>
	</Border>
</UserControl>
