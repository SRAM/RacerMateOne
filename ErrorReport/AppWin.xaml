<Window x:Class="ErrorReport.AppWin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RacerMate One Error reporter " Width="751" FontFamily="Arial" FontSize="14" Height="492">
    <Grid Margin="10">
		<StackPanel>
			<TextBlock TextWrapping="Wrap">The program encountered an error.  Please help us improve the software by sending an error report</TextBlock>
			<TextBlock Margin="0,14,0,0" FontWeight="Bold">Please decribe what you were doing when the error occured</TextBlock>
			<TextBox Name="Comment" Height="80" Margin="0,3,0,0" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"></TextBox>
			<TextBox Name="Report" Margin="0,14,0,0" TextWrapping="Wrap" Height="250" VerticalScrollBarVisibility="Auto" IsReadOnly="True"></TextBox>
			<Grid Margin="0,14,0,0">
				<Button HorizontalAlignment="Center" Height="25" Padding="15,0,15,0" Click="Button_Send">Send error report</Button>
				<Button HorizontalAlignment="Right" Height="25" Padding="15,0,15,0" Click="Button_Cancel">Cancel</Button>
			</Grid>
		</StackPanel>
    </Grid>
</Window>
