			</StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  >
				<c:Pillbox x:Name="Start" Text="Back" Width="105" VerticalAlignment="Center" IsEnabled="True" Click="Start_Click" />
			</StackPanel>
		</Grid>
		<!-- Main Box -->
		<Border Style="{DynamicResource Setup_Border}">
			<Grid Margin="20,10,20,10">
				<StackPanel>
					<Label Style="{DynamicResource HeaderLabel}" FontWeight="Bold" FontSize="20">RacerMate</Label>
