        <Selection Index="0" DisplayString="Pacer attacks are infrequent/aggressive"/>
        <Selection Index="1" DisplayString="Pacer attacks are infrequent/gentle"/>
        <Selection Index="2" DisplayString="Pacer attacks are frequent/aggressive"/>
        <Selection Index="3" DisplayString="Pacer attacks are frequent/gentle"/>
      </Selections>
    </PacerRoadRacer>

