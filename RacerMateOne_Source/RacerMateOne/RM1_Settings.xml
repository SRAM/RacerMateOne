    <PacerTimeDelay UserSetting="3" Default="3" FeatureEnabled="1" DisplayString="Time Delay">
      <LabelToShow>Seconds delayed</LabelToShow>
    </PacerTimeDelay>

    <!-- Pacer that rides INDEPENDENTLY at a constant fixed speed -->
    <PacerFixedSpeed UserSetting="16.7" Default="18.0" FeatureEnabled="1" DisplayString="Fixed Speed">
      <LabelToShow>mph (kph if metric)</LabelToShow>
    </PacerFixedSpeed >
