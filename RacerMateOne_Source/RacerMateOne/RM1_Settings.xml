  <!-- RaceMate General Settings -->
  <System>

    <!-- RaceMate Global Settings -->
    <Global>
      <!-- this settings follows numbering in App combobox as
      0: IRCV
      1: ErgVideo
      2: ErgVideoTest
      3: 3dRoadRacing
      4: GroupRacing
      5: WattTesting
      6: Spinscan
      7: Previous Performance
      -->
      <OPMode UserSetting="0" Default="0" DisplayString="OPMode">
        <Selections></Selections>
      </OPMode>
      <Course></Course>

      <!-- Multiple monitor configuration -->
      <DisplayConfiguration UserSetting="1" Default="0" DisplayString="Multimon Setup">
        <Selections>
          <Selections>
            <Selection Index="0" DisplayString="Use primary monitor only" />
            <Selection Index="1" DisplayString="Favor primary, use secondary when available" />
            <Selection Index="2" DisplayString="Use secondary monitor only" />
            <Selection Index="3" DisplayString="Favor secondary, use primary when available" />
            <Selection Index="4" DisplayString="Duplicate monitors" />
          </Selections>
          -->
        </Selections>
      </DisplayConfiguration>

      <!-- Units to use for display of distance and speed -->
      <UnitsForPower UserSetting="0" Default="0" DisplayString="Power">
        <Selections>
          <Selection Index="0" DisplayString="Always Watts" />
          <Selection Index="1" DisplayString="Favor 'Watts/kg' when multiple riders present" />
        </Selections>
      </UnitsForPower>

      <!-- Units to use for display of distance and speed -->
      <UnitsForDistance UserSetting="0" Default="0"  DisplayString="Units (US/Metric)">
        <Selections>
          <Selection Index="0" DisplayString="US units: miles, feet, pounds" />
          <Selection Index="1" DisplayString="Metric units: kilometers, meters, and kg" />
        </Selections>
      </UnitsForDistance>
   
      <!-- Drafting benefits can be enabled, in some ride modes -->
      <Drafting UserSetting="0" Default="0"  DisplayString="Drafting">
        <Selections>
          <Selection Index="0" DisplayString="No drafting benefit" />
          <Selection Index="1" DisplayString="Drafting ON" />
        </Selections>
      </Drafting>

      <!-- Use of Wind info in CRS files -->
      <Wind UserSetting="0" Default="0" DisplayString="Wind">
        <Selections>
          <Selection Index="0" DisplayString="Always disable wind resistance" />
          <Selection Index="1" DisplayString="Enable when present in course file" />
        </Selections>
      </Wind>

      <!-- All files are saved as per below. This used to be an option, but not worth the pain/testing costs.
        [#LAST#][#FIRST#]_[#MODE#]_[#COURSE32#]_[#YYYY-MM-DD#]@[#HH-MM-SS#]_([#HH:MM#])
      
        [#LAST#]          Rider last name     [#FIRST#]     Rider first name
        [#YYYY-MM-DD#]    Ride Date           [#HH-MM-SS#]  Ride Time
        [#HH:MM#]         Ride duration       [#MODE#]      Ride Mode  e.g.: 'MultiRider'
        [#COURSE32#] Course name clipped at 32 chars ( to cap file name length)
        -->
      
      
      <!-- Path of the logo applied by the ride studio -->
      <RideStudioLogoPath></RideStudioLogoPath>

      <!-- Path of the application used as a training log. eg.: WKO+ -->
      <TrainingLogAppPath></TrainingLogAppPath>

