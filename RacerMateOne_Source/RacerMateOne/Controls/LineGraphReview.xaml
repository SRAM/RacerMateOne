<UserControl x:Class="RacerMateOne.Controls.LineGraphReview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Name="graph" Loaded="graph_Loaded" MouseDown="graph_MouseDown" MouseUp="graph_MouseUp" MouseMove="graph_MouseMove">
	<Grid>
		<Grid Name="Area">
		</Grid>
		<Grid Background="#00FFFFFF">
			<Line Name="d_Glow" StrokeThickness="30" ClipToBounds="True">
				<Line.Stroke>
					<LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" >
						<GradientStop Color="#00FFFFFF" Offset="0"/>
						<GradientStop Color="#80FFFFFF" Offset="0.5"/>
						<GradientStop Color="#00FFFFFF" Offset="1"/>
					</LinearGradientBrush>
				</Line.Stroke>
			</Line>
			<Line Name="d_Line" StrokeThickness="1" Stroke="#FF000000"/>
		</Grid>
	</Grid>
</UserControl>
