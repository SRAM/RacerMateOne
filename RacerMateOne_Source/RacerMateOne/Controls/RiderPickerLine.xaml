<UserControl x:Class="RacerMateOne.Controls.RiderPickerLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    FontFamily="Arial"
    Width="245">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Width="245" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="117*" />
            <ColumnDefinition Width="103*" />
        </Grid.ColumnDefinitions>
        <TextBlock Name="Number" Foreground="#FF266388" FontSize="16" TextAlignment="Right" Margin="0,0,8,0"></TextBlock>
        <TextBlock Name="RiderName" Foreground="#FF266388" FontSize="16" Grid.Column="1" Margin="0,0,6,0"></TextBlock>
        <TextBlock Name="DeviceType" Foreground="#FF266388" FontSize="16" Grid.Column="2"></TextBlock>
    </Grid>
</UserControl>
